#!/usr/bin/env bash

sudo apt install gcc g++ -y

declare -x TREESITTER_VERSION='v0.22.6'
declare -x TREESITTER_PKG="tree-sitter-linux-x64"

wget "https://github.com/tree-sitter/tree-sitter/releases/download/${TREESITTER_VERSION}/${TREESITTER_PKG}.gz"
gzip -d "${TREESITTER_PKG}.gz"

mv "${TREESITTER_PKG}" treesitter
chmod +x treesitter
sudo mv treesitter /usr/local/bin
